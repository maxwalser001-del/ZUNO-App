# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:password@localhost:5432/zuno?schema=public"

# ===========================================
# APPLICATION
# ===========================================
# Base URL of the application (no trailing slash)
APP_URL="http://localhost:3000"

# Environment: development | production
NODE_ENV="development"

# ===========================================
# EMAIL SERVICE
# ===========================================
# Email provider: resend | sendgrid | nodemailer | console
EMAIL_PROVIDER="console"

# Provider-specific API key (only set the one you're using)
EMAIL_PROVIDER_KEY=""

# Default sender email
EMAIL_FROM="noreply@zuno.app"

# For Nodemailer SMTP (when EMAIL_PROVIDER=nodemailer)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
